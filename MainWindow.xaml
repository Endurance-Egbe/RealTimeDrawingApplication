                </DockPanel>
                
            </DockPanel>
            
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2" Width="200"
                    Background="#FF454B84">
            <Button Background="Transparent" DockPanel.Dock="Left" VerticalAlignment="Top"
                Name="btnPropertyWindow" Click="BtnPropertyWindow_Click"
                BorderBrush="Transparent" 
                        HorizontalAlignment="Center" HorizontalContentAlignment="Stretch">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="Property Window" Foreground="WhiteSmoke"
                               FontSize="15"/>
                    <Path Fill="WhiteSmoke" Data="M7,10L12,15L17,10H7Z" />
                </StackPanel>

            </Button>
                <local1:ShareUserControl Visibility="Collapsed" x:Name="ShareUserControl"/>
            <local1:PropertyWindow Visibility="Collapsed" x:Name="PropertyWindowControl"/>

        </StackPanel>
        <Canvas Grid.Row="1" Grid.Column="1" Background="WhiteSmoke" >

        </Canvas>
        <local1:MenuPane Grid.RowSpan="2" x:Name="MenuPaneUc"
                         Visibility="Collapsed" />

        <Popup IsOpen="False" x:Name="PropMenuPopup" Placement="Mouse"
               StaysOpen="False" PopupAnimation="Slide">
            <StackPanel Background="#FF454B84" >
                <TextBlock Text="Property Window" Foreground="WhiteSmoke"/>
                <TextBlock Text="Share User Window" Foreground="WhiteSmoke"/>
                <TextBlock Text="Project Window" Foreground="WhiteSmoke"/>
            </StackPanel>
        </Popup>
        
    </Grid>
</Window>
