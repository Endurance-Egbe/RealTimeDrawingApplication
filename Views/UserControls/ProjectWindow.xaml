<UserControl x:Class="MainViews.UserControls.ProjectWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainViews.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">

    <Grid Margin="10">
        <ListBox Background="Transparent"
                     ItemsSource="{Binding ProjectList}"
                      SelectedItem="{Binding SelectedProject}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <Ellipse Fill="Wheat" Width="10" Height="10" DockPanel.Dock="Right"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center" Margin="0,5"/>
                        <TextBlock Text="{Binding ProjectName}"
                                 FontSize="15" Margin="0,5" Foreground="WhiteSmoke"
                                 Cursor="Hand" DockPanel.Dock="Left"
                                   HorizontalAlignment="Left"/>
                    </DockPanel>

                                 
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
